<!doctype html>
<html>
  <head>
    <meta charset="utf-8">
    <!-- Always force latest IE rendering engine or request Chrome Frame -->
    <meta content="IE=edge,chrome=1" http-equiv="X-UA-Compatible">

    <!-- Use title if it's in the page YAML frontmatter -->
    <title><%= current_page.data.title || "Thinkbots (Pty) Ltd." %></title>

    <%= stylesheet_link_tag "normalize", "all" %>
    <link rel="stylesheet" href="//maxcdn.bootstrapcdn.com/font-awesome/4.3.0/css/font-awesome.min.css">

    <%= javascript_include_tag  "all" %>
  </head>

  <body class="<%= page_classes %>">
    <%= partial 'shared/googletags' %>
    <%= yield %>
    <footer id="footer">
      <div class="container">
        <div class="left">
          <small>&copy; Thinkbots (Pty) Ltd 2015. All rights reserved. The design of thinkbots and the robot are trademarks of Thinkbots (Pty) ltd.</small>
        </div>
        <div class="right">
          <a href="mailto:hi@thinkbots.io"><i class="fa fa-envelope-o" style="font-size: 22px; color: #686868"></i></a>
          <a href="https://twitter.com/ThinkbotsIO" target="_blank">
            <i class="fa fa-twitter" style="font-size: 22px; color: #686868"></i>
          </a>
          <a href="https://github.com/thinkbots" target="_blank">
            <i class="fa fa-github" style="font-size: 22px; color: #686868"></i>
          </a>
        </div>
      </div>
    </footer>
  </body>
</html>
